 @model Magfinalproject.Models.department

 @{
     ViewBag.Title = "الأقسام / إنشاء";
     Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}
<style>
    .row, form {
        width: 100%;
    }
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>


<h2 style="padding-right:25px">إظافة</h2>
<hr />

<div class="row">
    @using (Html.BeginForm("Create", "departments", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.collegeid, "إسم الكلية", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownList("collegeid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.collegeid, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.dgreeid, "اللقب العلمي", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.dgreeid, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dgreeid, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.photo, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    <input type="file" name="upload" class="form-control" />
                    @Html.ValidationMessageFor(model => model.photo, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.about, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.about, new { htmlAttributes = new { @class = "form-control", @id = "about" } })
                        @Html.ValidationMessageFor(model => model.about, "", new { @class = "text-danger" })
                    </div>
                </div>




                <div class="form-group">
                    <div class=" col-sm-10">
                        <input type="submit" value="إنشاء" class="btn btn-primary" id="save" />
                    </div>
                </div>



    }
</div>

    <script src="~/Scripts/jquery.min.js"></script>

    <script>
        $(function () {

            $("#save").click(function () {
                if ($("#cardimg").val() == "") {
                    $("#error-div").fadeIn();
                    $("#view-error").append("الرجآء أختيار صورة");
                    return false;
                }
                if ($("#cardimg").val() != "") {
                    var filename = document.getElementById("cardimg").value;
                    var extionsionimg = filename.substr(filename.lastIndexOf('.') + 1)
                    var validextention = ['jpg', 'png', 'jpeg', 'gif'];
                    if ($.inArray(extionsionimg, validextention) == -1) {
                        $("#error-div").fadeIn();
                        $("#view-error").append(" الرجآء أختيار صورة بإمتداد صحيح");
                        return false;
                    }
                    var filesize = document.getElementById("cardimg").files[0].size / 1024 / 1024;
                    if (filesize > 20) {
                        $("#error-div").fadeIn();
                        $("#view-error").append("الرجآء أختيار صورة حجمها أقل من 2 م.ب");
                        return false;
                    }
                }})
            }

        );
    </script>
    <script>
    CKEDITOR.replace("about");
    </script>


