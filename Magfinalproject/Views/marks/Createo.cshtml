@model Magfinalproject.Models.mark

@{
    ViewBag.Title = "Createo";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<h2>إنشاء</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>الدرجات</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.departmentid, "إختيار القسم", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("departmentid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.departmentid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.acadyearid, "إختيار الفصل الدراسي", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("acadyearid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.acadyearid, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="التالي" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العوده الى القائمة الرئيسية", "Index")
</div>
