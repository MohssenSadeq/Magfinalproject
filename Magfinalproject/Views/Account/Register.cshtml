@model Magfinalproject.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
                     <style>
                         input,select,label{
                          max-height:34px;
                         padding:-0.5em 0.8125em;
                         }
                         .form-control{
                             width:13%;
                         }
                     </style>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-horizontal  " style="padding-right:5em;padding-top:1em">
        <h2>تسجيل الأشتراك</h2>

        @Html.AntiForgeryToken()
        <h4>إنشاء حساب حديد</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserType, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownList("UserType",null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" >
            @Html.LabelFor(m => m.nikname, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.nikname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
                            <div class=" col-sm-10">
                <input type="submit" class="btn btn-primary" value="تسجيل الأشتراك" style="max-height:50px;margin-right:13.4em"/>
            </div>
        </div>
        </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
