@model Magfinalproject.Models.footer

@{
    ViewBag.Title = "التذييل / التفاصيل";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<h2 class="text-info" style="padding-right:1em;padding-top:1em">التفاصيل</h2>

<div>
    <hr />
    <dl class="form-horizontal"style="padding-right:65px;padding-left:65px">
        <dt>
            @Html.DisplayNameFor(model =>model.mainfoot)
        </dt>

        <dd>
            @Html.DisplayFor(model =>model.mainfoot)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.describtion)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.describtion).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pic)        
        </dt>

        <dd>
            <img src="~/uploads/@Model.pic" class="thumbnail" style="width:48px; height:48px" />

</dd>

    </dl>
</div>
<hr /><p style="padding-right:2em">
    @Html.ActionLink("تعديل", "Edit", new { id = Model.ID }) |
