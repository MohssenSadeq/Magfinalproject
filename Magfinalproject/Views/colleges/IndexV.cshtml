
@using Magfinalproject.Models;


@{
    ViewBag.Title = "الكليات";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
    var item = db.colleges;
  
}
<div class=" row page-header-row">

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Home/Index">الرئيسية</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <h2 class="mohsen">الكليات</h2>


    <hr />
    <div class="form-horizontal">

        <div class="row panel-body mohsen">
            @foreach (var subItem in item)
            {
                <div class="col-xs-6 col-sm-4  col-md-3 col-lg-3 thumbnail" style="margin-right:10px;max-width:300px;max-height:281.28px;background-color:white ; border:ridge">
                    <img src="~/uploads/@subItem.photo" class="img-rounded" style="width:100%;height:181px " />
                    <div style="height:100px; padding-right:15px">

                        <h3>@Html.ActionLink(Html.DisplayFor(model => subItem.name).ToString(), "DetailsV", "Colleges", new { id = subItem.id }, new { @class = " text-info" })  </h3>

                        @{ if (subItem.about.Length <= 40)
                            {
                                <h3 style="color:slategray">@Html.Raw((HttpUtility.HtmlDecode(Html.DisplayFor(itee => subItem.about).ToString())))</h3>

                            }
                            else
                            {
                                <h3 style="color:slategray">@Html.Raw((HttpUtility.HtmlDecode(Html.DisplayFor(itee => subItem.about).ToString()).Substring(0, 40))) ... </h3>


                            }
                        }

                    </div>
                </div>
                            }
        </div>

    </div>

            </div>
