@model Magfinalproject.Models.subject

@{
    ViewBag.Title = "المواد الدراسية / التعديل";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<style>
    .row, form {
        width: 100%;
    }
</style>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>

<h2>التعديل</h2>
<hr />
<div class="row">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

       
            <h4>المواد الدراسية</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.departmentid, "اسم القسم", htmlAttributes: new { @class = "control-label col-md-2" })
