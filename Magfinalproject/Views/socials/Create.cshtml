@model Magfinalproject.Models.social

@{
    ViewBag.Title = "التواصل الأجتماعي / إنشاء";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<link href="~/Content/Control_Panel.css" rel="stylesheet" />

<style>
    .row, form {
        width: 100%;
        padding-right: 1em;
    }
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>


<h2 style="padding-right:25px">إظافة</h2>
<hr />

<div class="row">
@using (Html.BeginForm("Create", "socials", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.social_name, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.social_name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.social_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.link, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
             @Html.TextBoxFor(m => m.link, new { placeholder = "https://www.SocialName.com/AdenUniversityID", @class = "form-control" })     
             @Html.ValidationMessageFor(model => model.link, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                <div class=" col-sm-10">
                    <input type="submit" value="إنشاء" class="btn btn-primary" />
                </div>
            </div>
    }


</div>
<hr />
<p>
    @Html.ActionLink("الرجوع إلى القائمة", "Index")
</p>

<script src="~/Scripts/jquery.min.js"></script>




















