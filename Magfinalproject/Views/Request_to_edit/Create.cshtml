@model Magfinalproject.Models.Request_to_edit

@{
    ViewBag.Title = "الطلبات / إنشاء";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Create", "Request_to_edit", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

       
    <div class="form-horizontal" style="margin-right:5%">
        <h2 style="margin-top:2%">طلب تعديل الملف الشخصي</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.dgreeid, "الدرجة العلمية", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.dgreeid, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dgreeid, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.fullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.phoneNum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.phoneNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phoneNum, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.pic, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                <input name="upload" type="file" value="أستعراض" class="form-control" id="cardimg" />
                <div class="alert alert-danger" id="error-div" style="display:none">
                    <span id="view-error"></span>
                </div>
                @Html.ValidationMessageFor(model => model.pic, "", new { @class = "text-danger" })
            </div>
        </div>


    <div class="form-group">
        @Html.LabelFor(model => model.picuni, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            <input name="uploadu" type="file" value="أستعراض" class="form-control" id="cardimgu" />
            <div class="alert alert-info" id="error-divu" style="display:none">
                <span id="view-erroru"></span>
            </div>
            @Html.ValidationMessageFor(model => model.picuni, "", new { @class = "text-danger" })
        </div>
    </div>
 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="إنشاء" class="btn btn-primary" id="save" />
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery.min.js"></script>

<script>
        $(function () {

            $("#save").click(function () {
                if ($("#cardimg").val() == "") {
                    $("#error-div").fadeIn();
                    $("#view-error").append("الرجآء أختيار صورة");
                    return false;
                }
                if ($("#cardimg").val() != "") {
                    var filename = document.getElementById("cardimg").value;
                    var extionsionimg = filename.substr(filename.lastIndexOf('.') + 1)
                    var validextention = ['jpg', 'png', 'jpeg', 'gif'];
                    if ($.inArray(extionsionimg, validextention) == -1) {
                        $("#error-div").fadeIn();
                        $("#view-error").append(" الرجآء أختيار صورة بإمتداد صحيح");
                        return false;
                    }
                    var filesize = document.getElementById("cardimg").files[0].size / 1024 / 1024;
                    if (filesize > 20) {
                        $("#error-div").fadeIn();
                        $("#view-error").append("الرجآء أختيار صورة حجمها أقل من 2 م.ب");
                        return false;
                    }
                }})
            }

        );
</script>

