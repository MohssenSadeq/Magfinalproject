@model IEnumerable<Magfinalproject.Models.student>

@{
    ViewBag.Title = " الطلاب/ الرئيسية";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>


<p>
    <i class="fa fa-edit text-dark">  </i> @Html.ActionLink("إنشاء جديد", "Create")
</p>
<div id="page-wrapper" class="mohsen">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table style="width:100%;direction:rtl" class="table table-secondary table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.acadyear.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.department.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.user.nikname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.stuid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.photo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.state)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.note)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.date)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acadyear.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.department.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.user.nikname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.stuid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.type)
                                    </td>
                                    <td>
                                        <img src="~/uploads/@item.photo" class="thumbnail" style="width:48px; height:48px" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.state)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.note)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.date)
                                    </td>
                                    <td>
                                        <a href="~/students/Edit/@item.id" title="تعديل" class="btn btn-default btn-sm text-dark"><i class="fa fa-pencil fa-lg"></i></a> |
                                        <a href="~/students/Details/@item.id" title="تفاصيل" class="btn btn-default btn-sm text-info"><i class="fa fa-info-circle fa-lg"></i></a> |
                                        <a href="~/students/Delete/@item.id" title="حذف" class="btn btn-default btn-sm text-danger"><i class="fa fa-remove fa-lg"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<link href="~/Content/toastr.min.css" rel="stylesheet" />

@section scripts{

    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/vendor/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });

        $(document).ready(function () {
            @if(TempData.ContainsKey("Success"))
     {
       @:toastr.success("تمت الإظافة بنجاح.");

            }
        });

        $(document).ready(function () {
            @if (TempData.ContainsKey("Delete"))

           {
                @:toastr.info("تم الحذف بنجاح.");

            }
        });
        $(document).ready(function () {
            @if(TempData.ContainsKey("Edit"))
          {
              @:toastr.info("تم التعديل بنجاح.");

          }
        });
    </script>

}