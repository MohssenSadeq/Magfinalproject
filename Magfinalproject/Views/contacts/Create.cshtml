@model Magfinalproject.Models.contacts

@{
    ViewBag.Title = "معلومات التواصل / إنشاء";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}

<link href="~/Content/Control_Panel.css" rel="stylesheet" />

<style>
    .row, form {
        width: 100%;
        padding-right: 1em;
        
    }
     .phone {
   direction: ltr;
    text-align: right;
    text-rendering: geometricPrecision;
    }
</style>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>


<h2 style="padding-right:25px">إظافة</h2>
<hr />

<div class="row">
    @using (Html.BeginForm("Create", "contacts", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.control_email, htmlAttributes: new {@class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.control_email, new { htmlAttributes = new { @placeholder = "name@domain.xx", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.control_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password_control, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password_control, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password_control, "", new { @class = "text-danger" })
            </div>
        </div>
               
        
       
        <hr style="height:1em;text-decoration:solid;color:blue" />
        <div class="form-group">
            @Html.LabelFor(model => model.contact_email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.contact_email, new { htmlAttributes = new { @placeholder = "name@domain.xx", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contact_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password_contact, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password_contact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password_contact, "", new { @class = "text-danger" })
            </div>
        </div>

      
        <hr style="height:1em;text-decoration:solid;color:blue" />
        <div class="form-group">
            @Html.LabelFor(model => model.telephone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @placeholder = "(+967) 253 6015",  @class = "form-control phone" } })
                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.phone_num, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.phone_num, new { htmlAttributes = new { @placeholder = "(+967) 770 893 621", @class = "form-control phone" } })
              
                @Html.ValidationMessageFor(model => model.phone_num, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class=" col-sm-10">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
            </div>
        </div>
    }


</div>
<hr />
<p>
    @Html.ActionLink("الرجوع إلى القائمة", "Index")
</p>

<script src="~/Scripts/jquery.min.js"></script>
